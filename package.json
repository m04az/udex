{
  "name": "udex",
  "version": "1.3.0",
  "description": "A quality-of-life Extension for Udacity Reviewers.",
  "watch": {
    "build:content": "src/js/main.js",
    "build:background": [
      "src/js/background.js",
      "src/popup.html",
      "src/js/popup.js"
    ]
  },
  "scripts": {
    "watch": "npm-watch",
    "build:content": "parcel build src/js/main.js -d build/ -o main",
    "prebuild:background": "rm -rf build/background.js, build/popup.html, build/popup.js",
    "build:background": "cp src/js/background.js src/js/popup.js src/popup.html build/",
    "zip": "zip -r udex.zip build images manifest.json",
    "prezip": "rm udex.zip"
  },
  "author": "Mikkel Trolle Larsen",
  "dependencies": {
    "npm-watch": "^0.3.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.1",
    "styled-jsx": "^2.2.6"
  },
  "devDependencies": {
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "parcel-bundler": "^1.7.1"
  }
}
