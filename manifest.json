{
  "manifest_version": 2,
  "name": "Udex",
  "description": "A quality-of-life Extension for Udacity Reviewers.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "src/popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/*",
        "https://review.udacity.com/*"
      ],
      "js": [
        "src/build/main.js"
      ]
    }
  ]
}